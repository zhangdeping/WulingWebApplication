@using WulingWebApplication.Models
@{
    ViewBag.Title = "增加地址";
    AppRole role = ViewData["Role"] as AppRole;
   
}

<h2  style="text-align:center">为 @role.Name 增加可访问的区域地址</h2>

<div class="col-lg-offset-4 col-lg-4">
    <fieldset>
        <legend>增加地址</legend>
        @*@using (Html.BeginForm("MultiQuery", ViewContext.RouteData.GetRequiredString("controller"), new { id = "" }, FormMethod.Post, new { id = "searchForm" }))*@
        @*{*@
        <form action="/RoleAdmin/AddAddress/" method="post" id="searchForm" onsubmit="return checkform();">
            @*<span>标题：</span>*@<input type="text" name="Province" id="Province" hidden style="width:120px" />
            @*<span>作者：</span>*@<input type="text" name="City" id="City" hidden style="width:120px" />@*<span>（如：Webdiyer）</span>*@
            @*<span>来源：</span>*@<input type="text" name="County" id="County" hidden style="width:120px" />@*<span>（如：吴起热线）</span>*@
            <input type="text" name="roleId" id="roleId" readonly="readonly" value="@role.Id" hidden style="width:120px" />
            <select id="cmbProvince" name="cmbProvince"></select>
            <select id="cmbCity" name="cmbCity"></select>
            <select id="cmbArea" name="cmbArea"></select>
            <input type="submit" value="确定" accesskey="S" />
        </form>
        @*}*@
    </fieldset>
</div>


<script src="~/AppJs/ChineseArea.js"></script>
<script>
        addressInit('cmbProvince', 'cmbCity', 'cmbArea');

</script>
<script>
        $(function(){
            $('form').bind('submit', checkform);

        })

  

        function checkform() {

            //alert("check");
            $('#Province').val($('#cmbProvince option:selected').val());
            $('#City').val($('#cmbCity option:selected').val());
            $('#County').val($('#cmbArea option:selected').val());


            return true;


        }
</script>